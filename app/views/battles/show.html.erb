<div class="page-header">
  <%= link_to battles_path, class: 'btn btn-default' do %>
  <span class="glyphicon glyphicon-list-alt"></span>
  Back
  <% end %>
  <%= link_to edit_battle_path(@battle), class: 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-pencil"></span>
  Edit
  <% end %>
  <h1><%= @battle.name %></h1>
</div>

<dl class="dl-horizontal">

  <br/>

</dl>

  <!-- left dropdown and right dropdown? -->
  <div class="container">

    <%= form_for :simulation do |f| %>

    <!-- Attacked dropdown selector -->
    <div class="col-xs-5 text-left">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Add Attacker
        </button>
        <ul class="dropdown-menu">
          <% for i in 1..Datasheet.count   %>
          <li>
            <a href="/battles/<%= @battle.id %>/datasheet/<%=i%>/<%= FALSE %>"><%= Datasheet.find(i).name%></a>
          </li>
          <% end %>
        </ul>
      </div>

      <!-- left list of attacker radios -->
      <% if @battle.units.count > 0 %>
        <% @battle.units.each do |unit| %>
          <ul class="list-group">
            <% if unit.team == FALSE %>
              <li class="list-group-item">
                <label for=<%="simulation_attacker_#{unit.id.to_s}"%>>
                  <%= unit.name%>
                </label>
                <%= f.radio_button :attacker, "#{unit.id.to_s}", required: true %>

                <a href="/battles/<%= @battle.id %>/unit/<%=unit.id%>">
                  <span class="pull-right glyphicon glyphicon-remove"></span>
                </a>
              </li>
            <% end %>
          </ul>
        <% end %>
      <% end %>

    </div>

    <div class="col-xs-5 text-left">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Add Target
        </button>
        <ul class="dropdown-menu">
          <% for i in 1..Datasheet.count   %>
          <li>
            <a href="/battles/<%= @battle.id %>/datasheet/<%=i%>/<%= TRUE %>"><%= Datasheet.find(i).name%></a>
          </li>
          <% end %>
        </ul>
      </div>
      <%= f.submit "Assign Target" %>


      <% if @battle.units.count > 0 %>
      <% @battle.units.each do |unit| %>
      <ul class="list-group">
        <% if unit.team == TRUE %>
        <li class="list-group-item">
          <a href="/battles/<%= @battle.id %>/unit/<%=unit.id%>">
            <span class="pull-left glyphicon glyphicon-remove"></span>
          </a>

          <%= f.radio_button :target, "#{unit.id.to_s}", required: true %>
          <label for=<%="simulation_target_#{unit.id.to_s}"%>>
            <%=unit.name%></label>

        </li>
        <% end %>
      </ul>
      <% end %>
      <% end %>


      <% end %>
    </div>
  </div>


  <div class="container">
    <div class="col-xs-8 text-center">

      <% @battle.simulations.each do |sim| %>

      <div class="btn-group" role="group" aria-label="Assigned Targets">
        <div class="btn-group">

          <!-- attacker dropdown -->
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <%= sim.attacker.name[0..10]%>

            </button>

            <ul class="dropdown-menu">
              <li>
                <a href="#"><%= sim.attacker.name%></a>
              </li>
              <li>
                <a href="#"><%= sim.attacker.role%></a>
              </li>
              <li>
                <a href="#">Power:
                  <%= sim.attacker.power%></a>
              </li>
              <li>
                <a href="#">BS:
                  <%= sim.attacker.combat_skill%>+</a>
              </li>
              <li>
                <a href="#">WS:
                  <%= sim.attacker.shooting_skill%>+</a>
              </li>
              <li>
                <a href="#">Toughness:
                  <%= sim.attacker.name%></a>
              </li>
              <li>
                <a href="#">Wounds:
                  <%= sim.attacker.name%></a>
              </li>
              <li>
                <a href="#">Model Count:
                  <%= sim.attacker.min_model_count%></a>
              </li>
            </ul>
          </div>

          <!-- target dropdown -->
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <%= sim.target.name[0..10]%>
            </button>

            <ul class="dropdown-menu">
              <li>
                <a href="#"><%= sim.target.name%></a>
              </li>
              <li>
                <a href="#"><%= sim.target.role%></a>
              </li>
              <li>
                <a href="#">Power:
                  <%= sim.target.power%></a>
              </li>
              <li>
                <a href="#">BS:
                  <%= sim.target.combat_skill%>+</a>
              </li>
              <li>
                <a href="#">WS:
                  <%= sim.target.shooting_skill%>+</a>
              </li>
              <li>
                <a href="#">Toughness:
                  <%= sim.target.toughness%></a>
              </li>
              <li>
                <a href="#">Wounds:
                  <%= sim.target.wounds%></a>
              </li>
              <li>
                <a href="#">Model Count:
                  <%= sim.target.min_model_count%></a>
              </li>
            </ul>
          </div>



          <!-- ALTERNATE form of checkbox -->
          <div class="btn-group">
            <%= form_tag(any_attack_path(sim.id,20), :method => "post") do %>


              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                ALT Weps
              </button>

              <ul class="dropdown-menu">
                <li>
                    <%= collection_check_boxes(:attacker, :weapons, sim.attacker.weapons, :id, :name) do |b| %>
                      <div class="collection-check-box">
                        <%= b.check_box %>
                        <%= b.label %>
                      </div>
                    <% end %>
                </li>
              </ul>
            <%= submit_tag("Slot Attack")  %>
            <% end %>

            <%= link_to any_attack_path(sim.id,1), method: :post, class: "btn btn-success btn-default" do %>
            <span class="glyphicon glyphicon-screenshot"></span>
            <% end %>

            <%= link_to any_attack_path(sim.id,40), method: :post, class: "btn btn-warning btn-default" do %>
            <span class="glyphicon glyphicon-stats"></span>
            <% end %>

            <%= link_to delete_sim_from_battle_path(@battle.id, sim.id), method: :delete, class: "btn btn-danger btn-default" do %>
            <span class="glyphicon glyphicon-remove-circle"></span>
            <% end %>
          </div>

        </div>
      <% end %>

    </div>
  </div>



  <div class="container">

    <div class="message-wr">
      <%= render '/messages/messages' %>
      <!-- <%= render '/messages/message_form' %> -->
    </div>

    <%= link_to clear_messages_path(current_user.id), method: :post, class: "align-center btn btn-warning btn-lg btn-default" do %>
    <span>
      Delete Results
    </span>
    <% end %>
  </div>
